.header {
  display: flex;
  justify-content: space-between;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.38);
}

.title {
  color: #fff;
}

.logout-button {
  margin: 10px 0;
  border: 0;
  border-radius: 25px;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.38);
  height: 40px;
  background: #57b846;
  color: #fff;
  outline: none;
  cursor: pointer;

  &:hover {
    background: #60e64f;
  }

  &:active {
    background: #3a8030;
  }
}
